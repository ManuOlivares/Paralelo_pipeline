pipeline {

    tools {nodejs "node"}

    stages {

        stage ('Cypress Parallel Test Suite'){
            parallel {
                stage('Slave 1') {
                    agent {
                        label "Agent 1"
                    }
                    steps {
                        git url: 'https://github.com/ManuOlivares/Paralelo_pipeline.git' 
                        bat 'npm install'
                        bat 'npm update'
                        bat 'npx cypress run --record --key 77445e42-4c46-4928-b943-82ee6237043d --parallel'
                    }
                }
